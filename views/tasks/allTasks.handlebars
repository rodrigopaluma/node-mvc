<h1>Todas as Tasks</h1>
<ul class="task-list">
    {{#each tasks}}
        <li>
            {{#if done}}
                <a href="/tasks/{{id}}" class="title done">{{title}}</a>
            {{else}}
                <a href="/tasks/{{id}}" class="title">{{title}}</a>
            {{/if}}
            <div class="actions">
                <form action="/tasks/updatestatus" method="POST">
                    <input type="hidden" name="id" value="{{id}}">
                    <input type="hidden" name="done" value="{{done}}">
                    <button type="submit">
                        <i class="bi bi-check2"></i>
                    </button>
                </form>
                <a href="/tasks/edit/{{id}}"><i class="bi bi-pencil-square"></i></a>
                <form action="/tasks/remove" method="POST">
                    <input type="hidden" name="id" value="{{id}}">
                    <button type="submit">
                        <i class="bi bi-x-lg"></i>
                    </button>
                </form>
            </div>
        </li>
    {{/each}}
</ul>
